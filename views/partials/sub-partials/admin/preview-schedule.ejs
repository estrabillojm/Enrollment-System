  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" />
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

  <title>Administrator</title>
</head>
<body>
  <div class="modHeaderTitle">
    <p class="h4"><%-schedule.toUpperCase()%></p>
  </div>
  <div class="container">
    <div class="col-sm-12">
      <table width="100%" class="table-bordered">
        <thead>
          <tr class="modTableHeader">
            <th>Day</th>
            <th>Subject</th>
            <th>Time In</th>
            <th>Time out</th>
          </tr>
        </thead>

        <%subject.forEach(function(data){%>
          <tr class="modTableBody">
            <td><%-data.days.charAt(0).toUpperCase()%><%-data.days.slice(1)%></td>
            <td><%-data.subject%></td>
            <td><%-data.timeIn%></td>
            <td><%-data.timeOut%></td>
          </tr>
        <%});%>
      </table>

      <form method="POST" action="/pdfMake/print-schedule">
        <button class="btn btn-primary myBtn">Make PDF</button>
        <a class="btn btn-default myBtn" href="/administrator/schedules">Back</a>
      </form>

    </div>


  </div>


</body>
</html>

